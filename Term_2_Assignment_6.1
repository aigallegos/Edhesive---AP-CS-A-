public class TeamMember {
    
    private String fullName;
    private String idString;
    
    public TeamMember(String name, String id) {
        String newName = "";
        name = name.trim();
        name = name.toLowerCase();
        newName += Character.toUpperCase(name.charAt(0));
        for (int i = 1; i < name.length(); i ++) {
            if ((name.charAt(i - 1) == ' ')||(name.charAt(i - 1) == '\t')) {
                newName += Character.toUpperCase(name.charAt(i));
            }
            else {
                newName += name.charAt(i);
            }
        }
        this.fullName = newName;
        this.idString = id;
    }
    
    public String toString() {
        return this.fullName;
    }
    
    public int compareTo(TeamMember other) {
        int number = this.idString.compareTo(other.idString);
        if (number > 0) {
            return 1;
        }else if (number < 0) {
            return -1;
        }else {
            return 0;
        }
    }
}
