import java.util.*;
import java.lang.*;

class Main {
 public static void main(String[] args) {
     String name = "";
     String ID = "";
     Scanner s = new Scanner(System.in);
     ArrayList<TeamMember> team = new ArrayList<TeamMember>();
     
     while (true){
         System.out.println("Enter the next name:");
         name = s.nextLine();
         
         if ( name.toLowerCase().equals("stop"))
            break;
            
        System.out.println("Enter the next ID:");
        ID = s.nextLine();
        
        TeamMember t = new TeamMember(name, ID);
        team.add(t);
     }
     
     System.out.println(team);
     
 }
 public static void insert(ArrayList<TeamMember> team, TeamMember t) {
     boolean inserted = false;
     for (int i = 0; i < team.size(); i++) {
         if (team.get(i).compareTo(t) >= 0) {
             team.add(i, t);
             inserted = true;
         }
     }
     if (!inserted) team.add(t);
 }
    
}
